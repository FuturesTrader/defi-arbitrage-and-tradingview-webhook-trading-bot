# Network RPC URLs
AVALANCHE_RPC_URL=your_avalanche_rpc_url
ARBITRUM_RPC_URL=your_arbitrum_rpc_url

# Contract Addresses (if deployed)
FLASH_LOAN_CONTRACT_ADDRESS=

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret
WEBHOOK_PORT=3001

# Trading Parameters
MIN_PROFIT_BPS=50  # Minimum profit in basis points
MAX_SLIPPAGE_BPS=100  # Maximum slippage tolerance

# Wallet Credentials
PRIVATE_KEY=your_private_key_here
WALLET_ADDRESS=your_wallet_address_here

NGROK_AUTHTOKEN=your_ngrok_auth_code_here
NGROK_API_KEY=your_ngrok_api_key_here
TEST_MODE=false

# BUY_MODE options: 'fixed' (specific USDC amount) or 'percentage' (% of USDC balance)
BUY_MODE=fixed
BUY_AMOUNT=10

AUTO_GENERATE_REPORTS=false

ENABLE_TRADE_TRACKING=true
REQUIRE_SECRET=true
# Set to 'false' to disable secret requirement entirely
ALLOW_HEADER_SECRET=false
# Allow secret in X-Webhook-Secret header
ALLOW_BODY_SECRET=true
# Allow secret in JSON body "secret" field
# Rate limiting
MAX_REQUESTS_PER_MINUTE=100

# Trade execution timeout (in milliseconds)
TRADE_TIMEOUT=120000

# Server configuration
ENABLE_CORS=true
ENABLE_HELMET=true
ENABLE_RATE_LIMIT=true
